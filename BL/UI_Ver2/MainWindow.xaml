<Window x:Class="UI_Ver2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI_Ver2"
        mc:Ignorable="d"
        Title="MainWindow" Height="620" Width="1000" WindowStyle="None" Closed="Button_Click_CloseWindow"
        AllowsTransparency="True" Background="Transparent" MouseDown="Window_MouseDown">

    <!-- Window Border -->
    <Border BorderThickness="2" BorderBrush="LightBlue" Background="AliceBlue" CornerRadius="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="18*"/>
            </Grid.RowDefinitions>
            <Border  CornerRadius="20" Height="60">
                <Border.Background>
                    <LinearGradientBrush>
                        <GradientStop Offset="0" Color="Lavender"/>
                        <GradientStop Offset="0.33" Color="Turquoise"/>
                        <GradientStop Offset="0.66" Color="DarkOliveGreen"/>
                        <GradientStop Offset="1" Color="DarkBlue"/>
                    </LinearGradientBrush>
                </Border.Background>
                <TextBlock Text="מערכת לניהול מבחני נהיגה" Margin="40 10 0 0" FontSize="16"/>
            </Border>
            <StackPanel x:Name="ManageButtonStackPanel" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 0 50 0">
                <Button Click="Button_Click_MinimizeWindow" Width="25" Height="25" Template="{StaticResource TitleBarButtons}" MouseEnter="Button_MouseEnter" MouseLeave="Button_MouseLeave">
                    <Button.Content>
                        <Image Source="Icons/minusIcon.png" Margin="5"/>
                    </Button.Content>
                </Button>
                <Button Click="Button_Click_MaximizeWindow" Width="25" Height="25" Template="{StaticResource TitleBarButtons}" Margin="10 0" MouseEnter="Button_MouseEnter" MouseLeave="Button_MouseLeave">
                    <Button.Content>
                        <Image Source="Icons/squareIcon.png" Margin="5"/>
                    </Button.Content>
                </Button>
                <Button Click="Button_Click_CloseWindow" Width="25" Height="25" Template="{StaticResource TitleBarButtons}" MouseEnter="Button_MouseEnter" MouseLeave="Button_MouseLeave">
                    <Button.Content>
                        <Image Source="Icons/xIcon.png" Margin="5"/>
                    </Button.Content>
                </Button>
            </StackPanel>
            <DockPanel Grid.Row="1">
                <Menu DockPanel.Dock="Top" VerticalAlignment="Center">
                    <MenuItem Header="אפשרויות">
                        <MenuItem Header="פתח חלון נוסף" Click="MenuItem_Click"/>
                    </MenuItem>
                </Menu>
            </DockPanel>
            <Grid Grid.Row="2" Margin="20">
                <TabControl x:Name="TabControl_Login" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" SelectionChanged="TabControl_SelectionChanged">
                    <TabControl.Background>
                        <RadialGradientBrush>
                            <GradientStop Color="#FF9CFFDF" Offset="0.2"/>
                            <GradientStop Color="#FFB7E4E7" Offset="0.595"/>
                            <GradientStop Color="#FFDAFFF3" Offset="1"/>
                        </RadialGradientBrush>
                    </TabControl.Background>
                    <TabItem Header="מנהל מערכת" Width="200" Height="30" FontSize="16">
                        <Grid>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border x:Name="AdminPasswordBorder" Padding="5" HorizontalAlignment="Center" VerticalAlignment="Bottom" Visibility="Collapsed">
                                <StackPanel Height="120" Width="300">
                                    <TextBlock Text="הכנס סיסמה:"/>
                                    <PasswordBox x:Name="PassBox_passAdmin" Height="30" Padding="2" VerticalContentAlignment="Center" Margin="0 10" KeyDown="PassBox_passAdmin_KeyDown"/>
                                    <Button Content="היכנס" Click="Button_Click_EnterAsAdmin"/>
                                </StackPanel>
                            </Border>
                            <Border x:Name="AdminMainWindowBorder" Margin="10" Visibility="Visible" Grid.RowSpan="2">
                                <Grid>
                                    <Button Content="התנתק" VerticalAlignment="Top" Width="100" HorizontalAlignment="Right" Margin="0 0 20 0" Click="Button_Click_LogOut"/>
                                    <TextBlock Text="עודכן לאחרונה בתאריך:" Margin="20 10" HorizontalAlignment="left"/>
                                    <TextBlock x:Name="TextBlock_LastUpdate" Text="{Binding}" Margin="200 10"/>
                                    <ListView x:Name="ListView_Configurations" Margin="20 40 20 20" SelectionChanged="ListView_Configurations_SelectionChanged"
                                                          GridViewColumnHeader.Click="GridViewColumnHeaderClickedHandler">

                                        <ListView.ItemContainerStyle>
                                            <Style TargetType="{x:Type ListViewItem}">
                                            </Style>
                                        </ListView.ItemContainerStyle>
                                        <ListView.View>
                                            <GridView>
                                                <GridViewColumn Header="שם ההגדרה" DisplayMemberBinding="{Binding Key}" Width="300"/>
                                                <GridViewColumn Header="ערך נוכחי" DisplayMemberBinding="{Binding Value}" Width="100"/>
                                            </GridView>
                                        </ListView.View>
                                        <ListView.ContextMenu >
                                            <ContextMenu>
                                                <MenuItem Header="שנה ערך" Click="MenuItem_Click_SetConfig"/>
                                            </ContextMenu>
                                        </ListView.ContextMenu>
                                    </ListView>
                                </Grid>
                            </Border>
                        </Grid>


                    </TabItem>

                    <!-- Office Window -->
                    <TabItem Header="ניהול משרדי" Width="200" Height="30" FontSize="16">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid>
                                <Border x:Name="OfficePasswordBorder" Padding="5" HorizontalAlignment="Center" VerticalAlignment="Bottom" Visibility="Collapsed">
                                    <StackPanel Height="120" Width="300">
                                        <TextBlock Text="הכנס סיסמה:"/>
                                        <PasswordBox x:Name="PassBox_passOffice" Height="30" Padding="2" VerticalContentAlignment="Center" Margin="0 10" KeyDown="PassBox_passOffice_KeyDown"/>
                                        <Button Content="היכנס" Click="Button_Click_EnterAsOffice"/>
                                    </StackPanel>
                                </Border>
                                <Border x:Name="OfficeMainWindowBorder" Margin="10" Visibility="Visible">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>


                                        </Grid.ColumnDefinitions>
                                        <Border Grid.Column="0" BorderThickness="2" BorderBrush="LightBlue" CornerRadius="15" Margin="3" Padding="10">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="1.5*"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>
                                                <TextBlock Text="ניהול בוחני נהיגה" HorizontalAlignment="Center"/>
                                                <Button Margin="5 20 5 5" Click="Button_Click_AddTester" ToolTipService.ShowDuration="8000">
                                                    <Button.ToolTip>
                                                        <StackPanel>
                                                            <TextBlock FontWeight="Bold">לחץ להוספת בוחן נהיגה.</TextBlock>
                                                            <TextBlock>יפתח חלון חדש, בו יוזנו פרטי הבוחן החדש.</TextBlock>
                                                        </StackPanel>
                                                    </Button.ToolTip>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="הוספת בוחן נהיגה" Margin="30 0"/>
                                                        <Image Source="Icons/greenplus.png" Height="18" Width="18"/>
                                                    </StackPanel>
                                                </Button>
                                                <Button  Grid.Row="1" Margin="5" Click="Button_Click_UpdateTester" ToolTipService.ShowDuration="8000">
                                                    <Button.ToolTip>
                                                        <StackPanel>
                                                            <TextBlock FontWeight="Bold">לחץ על מנת לעדכן פרטי בוחן קיים.</TextBlock>
                                                            <TextBlock>יפתח חלון מעבר, בו תידרש להזין את מספר ת.ז. של הבוחן.</TextBlock>
                                                            <TextBlock>במידה וקיים בוחן התואם לת.ז. שהוכנסה, יפתח חלון עידכון פרטי הבוחן.</TextBlock>
                                                        </StackPanel>
                                                    </Button.ToolTip>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="עדכן פרטי בוחן קיים" Margin="25 0"/>
                                                        <Image Source="Icons/reload_edition.png" Height="18" Width="18"/>
                                                    </StackPanel>
                                                </Button>
                                                <Button Grid.Row="2" Margin="5" Click="Button_Click_RemoveTester" ToolTipService.ShowDuration="8000">
                                                    <Button.ToolTip>
                                                        <StackPanel>
                                                            <TextBlock FontWeight="Bold">לחץ על מנת להסיר בוחן מהמערכת</TextBlock>
                                                            <TextBlock>אזהרה! פעולה זו אינה הפיכה!</TextBlock>
                                                            <TextBlock>יפתח חלון מעבר, בו תידרש להזין את מספר ת.ז. של הבוחן למחיקה</TextBlock>
                                                            <TextBlock>מחיקת בוחן תבטל את כל המבחנים העתידיים שלו. הודעה מפורטת על המבחנים שבוטלו תוצג בסוף התהליך.</TextBlock>
                                                        </StackPanel>
                                                    </Button.ToolTip>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="מחיקת בוחן" Margin="47 0"/>
                                                        <Image Source="Icons/delete.png" Height="18" Width="18"/>
                                                    </StackPanel>
                                                </Button>
                                                <Button  Grid.Row="3" Padding="5" Margin="5" Click="Button_Click_SearchTesterByName" ToolTipService.ShowDuration="8000">
                                                    <Button.ToolTip>
                                                        <StackPanel>
                                                            <TextBlock FontWeight="Bold">לחץ על מנת להציג את רשימת הבוחנים הקיימים</TextBlock>
                                                            <TextBlock>בחלון שיפתח תוכל לחפש בוחן ע"י מספר מאפיינים שונים.</TextBlock>
                                                            <TextBlock>בחלון שיפתח תהיה אפשרות להציג תתי קבוצות של בוחנים ע"י בחירת קריטריון לקיבוץ.</TextBlock>
                                                        </StackPanel>
                                                    </Button.ToolTip>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock FontSize="12" Text="הצג, קבץ, וחפש בוחנים" Margin="20 0"/>
                                                        <Image HorizontalAlignment="Left" Source="Icons/SearchImage.png" Height="18" Width="18"/>
                                                    </StackPanel>
                                                </Button>
                                            </Grid>
                                            <!--ListView x:Name="ListView_Testers" Grid.Row="1" Margin="20">
                                                <ListView.View>
                                                    <GridView>
                                                        <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}"/>
                                                        <GridViewColumn Header="First Name" DisplayMemberBinding="{Binding FirstName}"/>
                                                        <GridViewColumn Header="Last Name" DisplayMemberBinding="{Binding LastName}"/>
                                                    </GridView>
                                                </ListView.View>
                                            </-->
                                        </Border>
                                        <Border Grid.Column="1" BorderThickness="2" BorderBrush="LightBlue" CornerRadius="15" Margin="3" Padding="10">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="1.5*"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>
                                                <TextBlock Text="Trainee" HorizontalAlignment="Center"/>
                                                <Button Margin="5 20 5 5" Click="Button_Click_AddTrainee" ToolTipService.ShowDuration="8000">
                                                    <Button.ToolTip>
                                                        <StackPanel>
                                                            <TextBlock FontWeight="Bold">הקש להוספת תלמיד</TextBlock>
                                                            <TextBlock>יפתח חלון חדש, בו יוזנו פרטי הבוחן החדש.</TextBlock>
                                                        </StackPanel>
                                                    </Button.ToolTip>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="הוספת תלמיד" Margin="33 0"/>
                                                        <Image Source="Icons/greenplus.png" Height="18" Width="18"/>
                                                    </StackPanel>
                                                </Button>
                                                <Button Grid.Row="1" Margin="5" Click="Button_Click_UpdateTrainee" ToolTipService.ShowDuration="8000">
                                                    <Button.ToolTip>
                                                        <StackPanel>
                                                            <TextBlock FontWeight="Bold">הקש על מנת לעדכן רשיונות קיימים</TextBlock>
                                                            <TextBlock>אם התעודת זהות קיימת יפתח חלון לעדכון פרטים</TextBlock>
                                                        </StackPanel>
                                                    </Button.ToolTip>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock  Text=" עדכון פרטי תלמיד" Margin="21 0" />
                                                        <Image Source="Icons/reload_edition.png" Height="18" Width="18"/>
                                                    </StackPanel>
                                                </Button>
                                                <Button  Grid.Row="2" Margin="5" Click="Button_Click_RemoveTrainee" ToolTipService.ShowDuration="8000">
                                                    <Button.ToolTip>
                                                        <StackPanel>
                                                            <TextBlock FontWeight="Bold">הקש כדי למחוק פרטי תלמיד</TextBlock>
                                                            <TextBlock>יפתח חלון כדי לקבל את תעודת הזהות של התלמיד</TextBlock>
                                                            <TextBlock>אם התלמיד קיים הוא ימחק מהמערכת</TextBlock>
                                                        </StackPanel>
                                                    </Button.ToolTip>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text=" מחיקת תלמיד"  Margin="29 0"/>
                                                        <Image Source="Icons/delete.png" Height="18" Width="18"/>
                                                    </StackPanel>
                                                </Button>
                                                <Button Grid.Row="3" Margin="5" Click="Button_Click_SearchTrainee" ToolTipService.ShowDuration="8000">
                                                    <Button.ToolTip>
                                                        <StackPanel>
                                                            <TextBlock FontWeight="Bold">הקש כדי לצפות ברשימת התלמידים</TextBlock>
                                                            <TextBlock>חלון יפתח, ויציג את כל התלמידים</TextBlock>
                                                            <TextBlock>אתה יכול לסנן את התלמידים על ידי קיבוץ או חיפוש</TextBlock>
                                                        </StackPanel>
                                                    </Button.ToolTip>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock FontSize="12" Text="הצג, קבץ, וחפש תלמידים"  Margin="2 0" Width="139" />
                                                        <Image HorizontalAlignment="Left" Source="Icons/SearchImage.png" Height="18" Width="18"/>
                                                    </StackPanel>
                                                </Button>

                                            </Grid>
                                        </Border>
                                        <Border Grid.Column="2" BorderThickness="2" BorderBrush="LightBlue" CornerRadius="15" Margin="3" Padding="10">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="1.5*"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>
                                                <TextBlock Text="Test" HorizontalAlignment="Center"/>
                                                <Button Margin="5 20 5 5" Click="Button_Click_AddTest" ToolTipService.ShowDuration="8000">
                                                    <Button.ToolTip>
                                                        <StackPanel>
                                                            <TextBlock FontWeight="Bold">הקש כדי ליצור מבחן חדש</TextBlock>
                                                            <TextBlock>יפתח חלון, אתה תתבקש להכניס תעודות זהות של הבוחן והתלמיד וכתובת התחלה</TextBlock>
                                                            <TextBlock> תינתן אפשרות לבחור לפי יום או שעה</TextBlock>
                                                        </StackPanel>
                                                    </Button.ToolTip>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="הוספת מבחן" Margin="41 0"/>
                                                        <Image Source="Icons/greenplus.png" Height="18" Width="18"/>
                                                    </StackPanel>
                                                </Button>
                                                <Button  Grid.Row="1" Click="Button_Click_AbortTest" ToolTipService.ShowDuration="8000">
                                                    <Button.ToolTip>
                                                        <StackPanel>
                                                            <TextBlock FontWeight="Bold">הקש לבטל מבחן קיים</TextBlock>
                                                            <TextBlock>יפתח חלון ובו תתבקש להכניס מספר מבחן</TextBlock>
                                                            <TextBlock> אם המספר מבחן קיים המבחן יבוטל </TextBlock>
                                                        </StackPanel>
                                                    </Button.ToolTip>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="ביטול מבחן" Margin="45 0"/>
                                                        <Image Source="Icons/Ab.png" Height="18" Width="18"/>
                                                    </StackPanel>
                                                </Button>
                                                <Button  Grid.Row="2" Click="Button_Click_ViewTestDetails" ToolTipService.ShowDuration="8000">
                                                    <Button.ToolTip>
                                                        <StackPanel>
                                                            <TextBlock FontWeight="Bold">הקש כדי לצפות בפרטי המבחן</TextBlock>
                                                            <TextBlock>חלון יפתח, ותתבקש להכניס את מספר המבחן</TextBlock>
                                                        </StackPanel>
                                                    </Button.ToolTip>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="צפה בפרטי מבחן" Margin="28 0"/>
                                                        <Image Source="Icons/View.png" Height="18" Width="18"/>
                                                    </StackPanel>
                                                </Button>
                                                <Button  Grid.Row="3"  ToolTipService.ShowDuration="8000" Click="SearchTestsButton_Click">
                                                    <Button.ToolTip>
                                                        <ToolTip>
                                                            <StackPanel>
                                                                <TextBlock FontWeight="Bold">הקש על מנת לצפות ברשימת  המבחנים</TextBlock>
                                                                <TextBlock>בחלון שיפתח תוכל לחפש מבחן ע"י מספר מאפיינים שונים.</TextBlock>
                                                                <TextBlock>בחלון שיפתח תהיה אפשרות להציג תתי קבוצות של מבחנים ע"י בחירת קריטריון לקיבוץ.</TextBlock>
                                                            </StackPanel>
                                                        </ToolTip>
                                                    </Button.ToolTip>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock FontSize="12" Text="הצג, קבץ, וחיפוש מבחנים" Margin="3 0" Width="145" />
                                                        <Image HorizontalAlignment="Left" Source="Icons/SearchImage.png" Height="18" Width="18"/>
                                                    </StackPanel>
                                                </Button>
                                            </Grid>
                                        </Border>
                                        <Border Grid.Column="3" BorderThickness="2" BorderBrush="LightBlue" CornerRadius="15" Margin="3" Visibility="Collapsed">
                                            <Grid ShowGridLines="False" Margin="8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="5*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>
                                                <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Num Of Tests:"/>
                                                <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Text="Num Of Aborted Tests:"/>
                                                <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Text="Num Of Success Test:"/>
                                                <TextBlock Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Text="Num Of Failed Tests:"/>
                                                <TextBlock Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Text="Num Of Unupdated Tests:"/>
                                                <TextBlock Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Text="Success Proportion:"/>
                                                <TextBlock Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" Text="Average Max Test P.W:"/>

                                            </Grid>
                                        </Border>
                                    </Grid>
                                </Border>

                            </Grid>
                            <Border x:Name="OfficeStatistics" Grid.Row="1" BorderThickness="2" BorderBrush="LightBlue" CornerRadius="15" Margin="13 0 13 13">
                                <Grid x:Name="StatisticsGrid" Margin="10" ShowGridLines="True">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Bottom" Text="מבחני נהיגה - כמויות:"/>
                                    <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Text="אופנוע:"/>
                                    <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Text="רכב פרטי:"/>
                                    <TextBlock Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Text="רכב פרטי אוטומט:"/>
                                    <TextBlock Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Text="משאית 12 טון:"/>
                                    <TextBlock Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Text="משאית ללא הגבלה:"/>
                                    <TextBlock Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" Text="אוטובוס:"/>
                                    <TextBlock Grid.Row="7" Grid.Column="0" VerticalAlignment="Center" Text="סך הכל:"/>

                                    <TextBlock Grid.Row="1" Grid.Column="1" Margin="10 0 0 0" VerticalAlignment="Center" HorizontalAlignment="Left" Text="{Binding _NumOfTestsMotorCycle, Mode=OneWay}"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Margin="10 0 0 0" VerticalAlignment="Center" HorizontalAlignment="Left" Text="{Binding _NumOfTestsPrivateCar, Mode=OneWay}"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" Margin="10 0 0 0" VerticalAlignment="Center" HorizontalAlignment="Left" Text="{Binding _NumOfTestsAutoPrivateCar, Mode=OneWay}"/>
                                    <TextBlock Grid.Row="4" Grid.Column="1" Margin="10 0 0 0" VerticalAlignment="Center" HorizontalAlignment="Left" Text="{Binding _NumOfTestsTruck12Ton, Mode=OneWay}"/>
                                    <TextBlock Grid.Row="5" Grid.Column="1" Margin="10 0 0 0" VerticalAlignment="Center" HorizontalAlignment="Left" Text="{Binding _NumOfTestsTruckUnlimited, Mode=OneWay}"/>
                                    <TextBlock Grid.Row="6" Grid.Column="1" Margin="10 0 0 0" VerticalAlignment="Center" HorizontalAlignment="Left" Text="{Binding  _NumOfTestsBus, Mode=OneWay}"/>
                                    <TextBlock Grid.Row="7" Grid.Column="1" Margin="10 0 0 0" VerticalAlignment="Center" HorizontalAlignment="Left" Text="{Binding _NumOfTests, Mode=OneWay}"/>

                                    <TextBlock Grid.Row="0" Margin="10 0 0 0" Grid.Column="2" VerticalAlignment="Bottom" Text="נבחנים - כמויות:"/>
                                    <TextBlock Grid.Row="1" Margin="10 0 0 0" Grid.Column="2" VerticalAlignment="Center" Text="אופנוע:"/>
                                    <TextBlock Grid.Row="2" Margin="10 0 0 0" Grid.Column="2" VerticalAlignment="Center" Text="רכב פרטי:"/>
                                    <TextBlock Grid.Row="3" Margin="10 0 0 0" Grid.Column="2" VerticalAlignment="Center" Text="רכב פרטי אוטומט:"/>
                                    <TextBlock Grid.Row="4" Margin="10 0 0 0" Grid.Column="2" VerticalAlignment="Center" Text="משאית 12 טון:"/>
                                    <TextBlock Grid.Row="5" Margin="10 0 0 0" Grid.Column="2" VerticalAlignment="Center" Text="משאית ללא הגבלה:"/>
                                    <TextBlock Grid.Row="6" Margin="10 0 0 0" Grid.Column="2" VerticalAlignment="Center" Text="אוטובוס:"/>
                                    <TextBlock Grid.Row="7" Margin="10 0 0 0" Grid.Column="2" VerticalAlignment="Center" Text="סך הכל:"/>

